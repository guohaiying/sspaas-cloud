<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.3.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd"
>
    <!-- 配置自动扫描的包 -->
    <context:component-scan base-package="com.sspaas.sspaascloud.controller" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller" />
        <context:include-filter type="annotation" expression="org.springframework.web.bind.annotation.ControllerAdvice" />
    </context:component-scan>

    <!--<bean name="springContextUtil" class="com.cloudDesign.global.shiro.util.SpringContextUtil" scope="singleton"></bean>-->
    <!-- 注解 -->
    <mvc:annotation-driven />
    <!-- 注解注入 -->
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>
    <!-- 静态资源处理 也可使用 <mvc:default-servlet-handler />-->
    <mvc:default-servlet-handler />
    <!-- 配置路径拦截 -->
   <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/*/*"/>
            <mvc:mapping path="/*"/>
            <mvc:mapping path="/"/>
            <mvc:exclude-mapping path="/usermng/login"/>
            <mvc:exclude-mapping path="/code"/>
            <mvc:exclude-mapping path="/favicon.ico"/>
            <mvc:exclude-mapping path="/lo"/>
            <mvc:exclude-mapping path="/login"/>
            <mvc:exclude-mapping path="/indexdate"/>
            <mvc:exclude-mapping path="/css/*"/>
            <mvc:exclude-mapping path="/js/*"/>
            <mvc:exclude-mapping path="/images/*"/>
            <bean class="com.sspaas.sspaascloud.interceptor.LoginInterceptor"></bean>
        </mvc:interceptor>
    </mvc:interceptors>
    <!-- 配置视图解析器 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp"></property>
        <property name="suffix" value=".jsp"></property>
    </bean>
    <!--避免IE执行AJAX时，返回JSON出现下载文件-->
    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerAdapter">
        <property name="messageConverters">
            <list >
                <ref bean="mappingJacksonHttpMessageConverter" />
            </list>
        </property>
    </bean>
    <bean id="mappingJacksonHttpMessageConverter"
          class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
        <property name="supportedMediaTypes">
            <list>
                <value>text/html;charset=UTF-8</value>
            </list>
        </property>
    </bean>
    <!-- 配置文件上传 -->
	 <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">   
          <!-- 限制文件上传大小 传输编码 -->
          <!-- 
          <property name="maxUploadSize"><value>100000</value></property> 
          <property name="defaultEncoding"><value>UTF-8</value></property>
            -->
    </bean> 

</beans>